<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical">
		
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:background="#74ABAA"
	        android:gravity="center"
	        android:text="Profil de l'assistante"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#FFFFFF" />

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:padding="10dp"
			android:background="#B795A5">

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginBottom="5dp"
			    android:background="#C4C4C4"
			    android:orientation="horizontal" >

				<TextView
				    android:id="@+id/name_profil"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentTop="true"
				    android:layout_marginTop="5dp"
				    android:layout_marginLeft="5dp"
				    android:layout_toRightOf="@+id/ic_nurse"
				    android:text="Prénom NOM"
				    android:textColor="#040404"
				    android:textSize="18dip"
				    android:textStyle="bold"
				    android:typeface="sans" />

				<TextView
				    android:id="@+id/adress_profil"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignLeft="@+id/name_profil"
				    android:layout_marginLeft="10dp"
				    android:layout_below="@+id/name_profil"
				    android:text="Indication Adresse"
				    android:textColor="#343434"
				    android:textSize="12dip"
				    android:textStyle="italic" />

				<ImageView
				    android:id="@+id/ic_nurse"
				    android:layout_width="65dip"
				    android:layout_height="65dip"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:src="@drawable/ic_nurse_thor" />

			</RelativeLayout>

		</LinearLayout>

		<TextView
			android:layout_height="30dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:text="Enfants"
			android:gravity="center"
			android:background="#74ABAA"
			android:textColor="#FFFFFF"/>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#EEEEEE"
		    android:baselineAligned="true"
		    android:orientation="vertical"
		    android:padding="10dp" >

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:clipToPadding="true"
				android:background="#739FC5"
				android:layout_marginBottom="5dp">

				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:background="#ABABAB"
				    android:gravity="center"
				    android:text="Je peux accueillir"
				    android:layout_marginBottom="5dp"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:textColor="#FFFFFF"
				    android:textStyle="italic" />

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="5dp"
				    android:background="#FFFFFF"
				    android:orientation="horizontal" >

				    <ImageView
				        android:layout_width="25dp"
				        android:layout_height="25dp"
				        android:layout_gravity="center_vertical"
				        android:layout_marginLeft="5dp"
				        android:layout_marginRight="5dp"
				        android:src="@drawable/ic_baby" />

				    <TextView
				        android:id="@+id/TextView02"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:background="#FFFFFF"
				        android:ems="10"
				        android:height="40dp"
				        android:hint="Nombre 0-3 ans"
				        android:inputType="text"
				        android:padding="10dp" />
				</LinearLayout>

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="5dp"
				    android:background="#FFFFFF"
				    android:orientation="horizontal" >

				    <ImageView
				        android:layout_width="25dp"
				        android:layout_height="25dp"
				        android:layout_gravity="center_vertical"
				        android:layout_marginLeft="5dp"
				        android:layout_marginRight="5dp"
				        android:src="@drawable/ic_peri_girl" />

				    <TextView
				        android:id="@+id/TextView01"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:background="#FFFFFF"
				        android:ems="10"
				        android:height="40dp"
				        android:hint="Nombre 3-7 ans"
				        android:inputType="text"
				        android:padding="10dp" />
				</LinearLayout>
				
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:layout_marginBottom="5dp"
					android:background="#FFFFFF">

					<ImageView
						android:layout_height="25dp"
						android:layout_width="25dp"
						android:src="@drawable/ic_peri_boy"
						android:layout_gravity="center_vertical"
						android:layout_marginRight="5dp"
						android:layout_marginLeft="5dp"/>
	
					<TextView
					    android:id="@+id/edit_name"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:background="#FFFFFF"
					    android:ems="10"
					    android:height="40dp"
					    android:hint="Nombre 7-11 ans"
					    android:inputType="text"
					    android:padding="10dp" />

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#E4BBCA"
		    android:gravity="center"
		    android:orientation="vertical"
		    android:padding="10dp" >

		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ABABAB"
		        android:gravity="center"
		        android:text="Le mot de l'assistante"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="#FFFFFF"
		        android:textStyle="italic" />

		    <TextView
		        android:id="@+id/edit_message"
		        android:layout_width="match_parent"
		        android:layout_height="100dp"
		        android:background="#FFFFFF"
		        android:ems="10"
		        android:gravity="top"
		        android:hint="Votre message ..."
		        android:inputType="textShortMessage"
		        android:padding="10dp" />
		</LinearLayout>

		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:background="#74ABAA"
		    android:gravity="center"
		    android:text="Divers"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="#FFFFFF" />
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:background="#DDDDDD"
		    android:gravity="center"
		    android:orientation="vertical"
		    android:padding="10dp" >

			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#ABABAB"
			    android:gravity="center"
			    android:text="Informations complémentaires"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="#FFFFFF"
			    android:textStyle="italic" />

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="5dp"
			    android:background="#739FC5"
			    android:clipToPadding="true"
			    android:orientation="horizontal" >

				<LinearLayout
				    android:layout_width="93dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
				    android:layout_marginLeft="5dp"
				    android:background="#FFFFFF"
				    android:orientation="vertical" >

					<RelativeLayout
					    android:layout_width="93dp"
					    android:layout_height="wrap_content"
					    android:layout_marginBottom="5dp"
					    android:background="#FFFFFF"
					    android:orientation="horizontal" >

					    <ImageView
					        android:id="@+id/ImageView08"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:layout_alignParentTop="true"
					        android:layout_marginTop="5dp"
					        android:src="@drawable/ic_repas"
					        android:text="Prénom NOM"
					        android:textColor="#040404"
					        android:textSize="18dip"
					        android:textStyle="bold"
					        android:typeface="sans" />

					    <TextView
					        android:id="@+id/TextView10"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/ImageView08"
					        android:gravity="center"
					        android:text="Oui/Non"
					        android:textColor="#343434"
					        android:textSize="12dip" />
					</RelativeLayout>

					<RelativeLayout
					    android:layout_width="93dp"
					    android:layout_height="wrap_content"
					    android:layout_marginBottom="5dp"
					    android:background="#FFFFFF"
					    android:orientation="horizontal" >

					    <ImageView
					        android:id="@+id/ImageView07"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:layout_alignParentTop="true"
					        android:layout_marginTop="5dp"
					        android:src="@drawable/ic_gouter"
					        android:text="Prénom NOM"
					        android:textColor="#040404"
					        android:textSize="18dip"
					        android:textStyle="bold"
					        android:typeface="sans" />

					    <TextView
					        android:id="@+id/TextView09"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/ImageView07"
					        android:gravity="center"
					        android:text="Oui/Non"
					        android:textColor="#343434"
					        android:textSize="12dip" />
					</RelativeLayout>

				    <RelativeLayout
				        android:layout_width="93dp"
				        android:layout_height="wrap_content"
				        android:layout_marginBottom="5dp"
				        android:background="#FFFFFF"
				        android:orientation="horizontal" >

				        <ImageView
				            android:id="@+id/ImageView03"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_alignParentLeft="true"
				            android:layout_alignParentTop="true"
				            android:layout_marginTop="5dp"
				            android:src="@drawable/ic_planning"
				            android:text="Prénom NOM"
				            android:textColor="#040404"
				            android:textSize="18dip"
				            android:textStyle="bold"
				            android:typeface="sans" />

				        <TextView
				            android:id="@+id/TextView05"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_alignParentLeft="true"
				            android:layout_below="@+id/ImageView03"
				            android:gravity="center"
				            android:text="Oui/Non"
				            android:textColor="#343434"
				            android:textSize="12dip" />
				    </RelativeLayout>
				</LinearLayout>

				<LinearLayout
				    android:layout_width="93dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center"
				    android:layout_marginLeft="5dp"
				    android:background="#FFFFFF"
				    android:orientation="vertical" >

					<RelativeLayout
					    android:layout_width="93dp"
					    android:layout_height="wrap_content"
					    android:layout_marginBottom="5dp"
					    android:background="#FFFFFF"
					    android:orientation="horizontal" >

					    <ImageView
					        android:id="@+id/ImageView06"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:layout_alignParentTop="true"
					        android:layout_marginTop="5dp"
					        android:src="@drawable/ic_activites"
					        android:text="Prénom NOM"
					        android:textColor="#040404"
					        android:textSize="18dip"
					        android:textStyle="bold"
					        android:typeface="sans" />

					    <TextView
					        android:id="@+id/TextView08"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/ImageView06"
					        android:gravity="center"
					        android:text="Oui/Non"
					        android:textColor="#343434"
					        android:textSize="12dip" />
					</RelativeLayout>

					<RelativeLayout
					    android:layout_width="93dp"
					    android:layout_height="wrap_content"
					    android:layout_marginBottom="5dp"
					    android:background="#FFFFFF"
					    android:orientation="horizontal" >

					    <ImageView
					        android:id="@+id/ImageView05"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:layout_alignParentTop="true"
					        android:layout_marginTop="5dp"
					        android:src="@drawable/ic_pet_cat"
					        android:text="Prénom NOM"
					        android:textColor="#040404"
					        android:textSize="18dip"
					        android:textStyle="bold"
					        android:typeface="sans" />

					    <TextView
					        android:id="@+id/TextView07"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/ImageView05"
					        android:gravity="center"
					        android:text="Oui/Non"
					        android:textColor="#343434"
					        android:textSize="12dip" />
					</RelativeLayout>

				    <RelativeLayout
				        android:layout_width="93dp"
				        android:layout_height="wrap_content"
				        android:layout_marginBottom="5dp"
				        android:background="#FFFFFF"
				        android:orientation="horizontal" >

				        <ImageView
				            android:id="@+id/ImageView01"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_alignParentLeft="true"
				            android:layout_alignParentTop="true"
				            android:layout_marginTop="5dp"
				            android:src="@drawable/ic_pet_dog"
				            android:text="Prénom NOM"
				            android:textColor="#040404"
				            android:textSize="18dip"
				            android:textStyle="bold"
				            android:typeface="sans" />

				        <TextView
				            android:id="@+id/TextView03"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_alignParentLeft="true"
				            android:layout_below="@+id/ImageView01"
				            android:gravity="center"
				            android:text="Oui/Non"
				            android:textColor="#343434"
				            android:textSize="12dip" />
				    </RelativeLayout>
				</LinearLayout>
			    
			    <LinearLayout
			        android:layout_width="93dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="right"
			        android:layout_marginLeft="5dp"
			        android:background="#FFFFFF"
			        android:orientation="vertical" >

			        <RelativeLayout
			            android:layout_width="93dp"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="5dp"
			            android:background="#FFFFFF"
			            android:orientation="horizontal" >

			            <ImageView
			                android:id="@+id/ImageView04"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_alignParentLeft="true"
			                android:layout_alignParentTop="true"
			                android:layout_marginTop="5dp"
			                android:src="@drawable/ic_sieste"
			                android:text="Prénom NOM"
			                android:textColor="#040404"
			                android:textSize="18dip"
			                android:textStyle="bold"
			                android:typeface="sans" />

			            <TextView
			                android:id="@+id/TextView06"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_below="@+id/ImageView04"
			                android:gravity="center"
			                android:text="Oui/Non"
			                android:textColor="#343434"
			                android:textSize="12dip" />
			        </RelativeLayout>

			        <RelativeLayout
			            android:layout_width="93dp"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="5dp"
			            android:background="#FFFFFF"
			            android:orientation="horizontal" >

			            <ImageView
			                android:id="@+id/ImageView02"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_alignParentLeft="true"
			                android:layout_alignParentTop="true"
			                android:layout_marginTop="5dp"
			                android:src="@drawable/ic_nuit"
			                android:text="Prénom NOM"
			                android:textColor="#040404"
			                android:textSize="18dip"
			                android:textStyle="bold"
			                android:typeface="sans" />

			            <TextView
			                android:id="@+id/TextView04"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_below="@+id/ImageView02"
			                android:gravity="center"
			                android:text="Oui/Non"
			                android:textColor="#343434"
			                android:textSize="12dip" />

			        </RelativeLayout>
	
				    <RelativeLayout
				        android:layout_width="93dp"
				        android:layout_height="wrap_content"
				        android:layout_marginBottom="5dp"
				        android:background="#FFFFFF"
				        android:orientation="horizontal" >
	
						<ImageView
						    android:id="@+id/test1"
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_alignParentLeft="true"
						    android:layout_alignParentTop="true"
						    android:layout_marginTop="5dp"
						    android:src="@drawable/ic_secours"
						    android:text="Prénom NOM"
						    android:textColor="#040404"
						    android:textSize="18dip"
						    android:textStyle="bold"
						    android:typeface="sans" />

						 <TextView
			                android:id="@+id/TextView00"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_below="@+id/test1"
			                android:gravity="center"
			                android:text="Oui/Non"
			                android:textColor="#343434"
			                android:textSize="12dip" />
	
				    </RelativeLayout>
				</LinearLayout>
			</LinearLayout>
	</LinearLayout>

		<Button
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:text="Demande de contact"
			android:background="#DE7972"
			android:id="@+id/contact_profil"/>

	</LinearLayout>
</ScrollView>

